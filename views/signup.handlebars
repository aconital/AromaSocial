<script>
function nospaces(t){
    if( t.value.match(/\s/g) || t.value.match(/\./g)  ){

        //swal("Sorry...", "You can't have spaces or periods in your username", "error");
        $('#' + t.id).tooltip('toggle');
        setTimeout(function(){ $('#' + t.id).tooltip('toggle'); }, 3000);

        t.value= (t.value.replace(/\s/g,'') .replace(/\./g,''));

    }
}
</script>

<div class="row">
    <div class="col-md-offset-4 col-md-4">
        <div class="panel panel-default panel-signup">
            <div class="panel-heading"><font size="3"> <b> Sign up for Syncholar</b></font></div>

            {{!--<div class="row">
                <div class="alert alert-warning" id="error" style="visibility: hidden"></div></p>
                <p class="bg-danger">{{Error}}</p>
            </div>--}}
            <form name="form" method="post" action="/signup">

                <div class="form-group">
                    <label for="firstname" class="control-label">First Name</label>
                    <input type="text" name="firstname" id="firstname" onkeyup="nospaces(this)" placeholder="First Name" ng-model="fullname" autofocus="autofocus" class="form-control" data-toggle="tooltip" data-trigger="manual" data-placement="top" title="No spaces or periods in first name..." aria-required="true" required/>
                </div>

                <div class="form-group">
                    <label for="lastname" class="control-label">Last Name</label>
                    <input type="text" name="lastname" id="lastname" onkeyup="nospaces(this)" placeholder="Last Name" ng-model="lastname" autofocus="autofocus" class="form-control" data-toggle="tooltip" data-trigger="manual" data-placement="top" title="No spaces or periods in last name..." aria-required="true" required/>
                </div>

                <div class="form-group">
                    <label for="email" class="control-label">Email</label>
                    <input type="email" ng-model="email" name="email" id="email" placeholder="Email" class="form-control" aria-required="true" required/>
                </div>

                <div class="form-group">
                    <label for="password" class="control-label">Password</label>
                    <input type="password" name="password" id="password" ng-model="password" match="verification" class="form-control" aria-required="true" required/>
                </div>

                <div class="form-group">
                    <label for="verification" class="control-label">Repeat password</label>
                    <input type="password" name="verification" id="verification" ng-model="verification" match="password" class="form-control" aria-required="true" required/>
                </div>
                
                <br>
                <input type="submit" value="Sign Up" class="btn btn-primary"/>
                <div class="form-group">
                    <p> By clicking "Sign Up", or "Sigin in with Linkedin", you agree to our
                        <a href="/terms" target="_blank"> terms and conditions</a>
                        and
                        <a href="/privacy" target="_blank"> privacy policy</a>.
                    </p>
                </div>
            </form>
            <div class="row" style="margin-top:20px; text-align: center">
                <a href="/oauth/linkedin"><img src="images/Retina/Sign-In-Small---Default.png"></a>
            </div>
        </div>
    </div>
</div>
