doctype html
html
  head
    title= title
    block socketscript
    script(src="/javascripts/jquery/dist/jquery.min.js")
    script(src="/javascripts/bootstrap-sass-official/assets/javascripts/bootstrap.js") 
    link(rel='stylesheet', href='/stylesheets/style.css') 

  body
  .container
    nav.navbar.navbar-default.navbar-index.center
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
            span.sr-only Toggle Navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar  
                      
        .collapse.navbar-collapse#bs-example-navbar-collapse-1
          ul.nav.navbar-nav
            li
              img.logo(alt="RT" src="/images/beaker-invert.png" width="30")
            li
              a.title(href="/") WebsiteTitle
            
          ul.nav.navbar-nav.navbar-right
            -if (path === "/")
              li
                a.login-link(href="#" data-toggle="modal" data-target="#myModal") LOGIN
              li
                a.login-link(href="/signup") SIGN UP
            -if (path === "/signup")
              li
                a.login-link(href="#" data-toggle="modal" data-target="#myModal") LOGIN
            -if(path === "/signin")
              li
                a.login-link(href="/signup") SIGN UP
  
    link(href="http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css", rel="stylesheet")
        
    // modal content
    #myModal.modal.fade.bs-example-modal-lg(tabindex="-1" role="dialog" aria-labelledby="myModalLabel")
      .modal-dialog.modal-lg(role="content")

        .modal-content
          .modal-header
            button.close(type="button" data-dismiss="modal" aria-label="Close")
              span(aria-hidden="true") &times;
            h4.modal-title Login or Sign Up
          .modal-body
            .row
              .col-sm-6
                form(name="form", method="post", action="/signin", novalidate)
                  div.form-group
                    label.control-label(for="username") Username
                    input.form-control(type="text", name="username", id="username", placeholder="Username", unique-username, required, ng-model="username", autofocus)
                  div.form-group
                    label.control-label(for="password") Password
                    input.form-control(type="password", name="password", id="password", ng-model="password", required, match="verification")
        
                  input.btn.btn-primary(type="submit", value="Sign in", ng-disabled="form.$invalid")
              .col-sm-6.auth-plain
                .signup-panel.newusers
                  p.welcome  New User?
                  p
                    | By creating an account with us, you will be able to move through the checkout process faster, view and track your orders, and more.
                  br
                  a.button(href="/signup") Sign Up
                  br
          .modal-footer
            button.btn.btn-default(type="button" data-dismiss="modal") Close

    .wrapper-for-content-outside-of-footer.index-wrapper
      block content
    
    footer.footer
      .container
        .nav.navbar.navbar-default.footer-nav
          .row
            .col-sm-3.footer-header
              p
                | &copy; UBC FOM Lab
            .col-xs-3.col-sm-offset-3
              ul.nav.navbar-nav
                li
                  a(href="#") Section 1
                li
                  a(href="#") Section 1

  script(src="/javascripts/browserjs.js")